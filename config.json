{
    "name": "ShapeNet",
    "n_gpu": 1,

    "arch": {
        "type": "ShapeModelRetrievalAux",
        "args": {}
    },
    "arch_text": {
        "type": "ShapeModelRetrievalText",
        "args": {}
    },
    "data_loader": {
        "type": "ShapeLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 12
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "retrieval_loss": "retrieval_loss_full_matrix",
    "metrics": [
        "accuracy"
    ],
    "metrics_retrieval": [
        "accuracy_retrieval", "compute_metric"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 2,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    },
    "trainer_ret": {
        "epochs": 20,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss_retrieval",
        "early_stop": 10,

        "tensorboard": true
    },
    "font": {
        "font_type": "/usr/share/fonts/dejavu/DejaVuSans-Bold.ttf"
    }
}
